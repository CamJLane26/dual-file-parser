{
  "name": "dual-file-parser",
  "version": "1.0.0",
  "description": "Express microservice for parsing CSV, TSV, and tab-separated text files with streaming support",
  "main": "build/server.js",
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "copy-assets": "mkdir -p build/public && cp -r src/public/* build/public/",
    "start": "node --max-old-space-size=${NODE_HEAP_SIZE:-4096} --expose-gc build/server.js",
    "dev": "node --max-old-space-size=${NODE_HEAP_SIZE:-4096} --expose-gc -r ts-node/register src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "generate-csv": "node --max-old-space-size=4096 --expose-gc -r ts-node/register sandbox/generateCsv.ts"
  },
  "keywords": [
    "csv",
    "tsv",
    "parser",
    "express",
    "streaming"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "csv-parse": "^5.5.3",
    "express": "4.21.2",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/express": "5.0.3",
    "@types/jest": "^29.5.12",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.14.10",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^2.0.16",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  }
}
